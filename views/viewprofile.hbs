<div class="container" style="margin-top: 6%">
    <h3 style="text-align: center; background-color:lightgreen">User Profile</h3>
    <br>
    <h5>Email Id: {{Customer}}</h5>
    <br>
    <div class="row">
        <div class="col-lg-12">
            {{#if data}}
            <table class="table table-hover text-center table-bordered">
                <tr>
                    <th>UserName</th>
                    <td>{{data.UserName}}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{data.Email}}</td>
                </tr>
                <tr>
                    <th>Contact</th>
                    <td>{{data.Contact}}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{data.Address}}</td>
                </tr>
            </table>
            {{/if}}
        </div>
    </div>
</div>